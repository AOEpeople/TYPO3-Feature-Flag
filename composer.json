{
    "name": "aoe/feature-flag",
    "description": "Add ability to use feature flags for extensions and content elements.",
    "type": "typo3-cms-extension",
    "homepage": "https://forge.typo3.org/projects/extension-feature_flag",
    "license": "GPL-3.0",
    "support": {
        "email": "dev@aoe.com",
        "issues": "https://forge.typo3.org/projects/extension-feature_flag/issues",
        "source": "https://forge.typo3.org/projects/extension-feature_flag"
    },
    "authors": [
        {
            "name": "AOE GmbH",
            "email": "dev@aoe.com",
            "homepage": "http://www.aoe.com"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "typo3/cms-core": ">=7.6.0",
        "typo3/cms-extbase": "*",
        "typo3/cms-scheduler": "*"
    },
    "require-dev": {
        "typo3/cms": "^7.6",
        "nimut/testing-framework": "2.0.0",
        "phpunit/phpcov": "2.0.*",
        "squizlabs/php_codesniffer": "2.3.*",
        "sebastian/phpcpd": "2.0.*",
        "phpmd/phpmd": "2.2.*"
    },
    "replace": {
        "feature_flag": "self.version"
    },
    "autoload": {
        "classmap": [
            "Classes/"
        ],
        "psr-4": {
            "Aoe\\FeatureFlag\\": "Classes/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "Tests"
        ]
    },
    "scripts": {
        "test:unit": [
            "[ -e 'vendor/bin/phpunit' ] || composer cleanupdate",
            "vendor/bin/phpunit --colors -v -c vendor/nimut/testing-framework/res/Configuration/UnitTests.xml Tests/Unit"
        ],
        "test:functional": [
            "[ -e 'vendor/bin/phpunit' ] || composer cleanupdate",
            "mkdir -p typo3conf/ext",
            "ln -snvf ../../. typo3conf/ext/feature_flag",
            "vendor/bin/phpunit --colors -v -c vendor/nimut/testing-framework/res/Configuration/FunctionalTests.xml Tests/Functional"
        ],
        "cleanupdate": [
            "rm -rf ./typo3conf ./vendor ./uploads ./typo3_src ./typo3temp",
            "if [ -L 'index.php' ]; then unlink ./index.php; fi",
            "if [ -L 'typo3' ]; then unlink ./typo3; fi",
            "composer update"
        ]
    },
    "keywords": [
        "TYPO3",
        "extbase",
        "feature flag"
    ]
}
