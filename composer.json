{
    "name": "aoe/feature-flag",
    "description": "Add ability to use feature flags for extensions and content elements.",
    "type": "typo3-cms-extension",
    "homepage": "https://github.com/AOEpeople/TYPO3-Feature-Flag",
    "license": "GPL-3.0",
    "support": {
        "email": "dev@aoe.com",
        "issues": "https://github.com/AOEpeople/TYPO3-Feature-Flag/issues",
        "source": "https://github.com/AOEpeople/TYPO3-Feature-Flag"
    },
    "authors": [
        {
            "name": "AOE GmbH",
            "email": "dev@aoe.com",
            "homepage": "http://www.aoe.com"
        }
    ],
    "require": {
        "php": "^7.0",
        "typo3/cms-core": ">=7.6.0",
        "typo3/cms-extbase": "*",
        "typo3/cms-scheduler": "*"
    },
    "require-dev": {
        "typo3/cms": "^7.6",
        "nimut/testing-framework": "2.0.*",
        "phpunit/phpcov": "3.1.*",
        "squizlabs/php_codesniffer": "3.3.*",
        "sebastian/phpcpd": "3.0.*",
        "phpmd/phpmd": "2.6.*"
    },
    "replace": {
        "feature_flag": "self.version"
    },
    "autoload": {
        "classmap": [
            "Classes/"
        ],
        "psr-4": {
            "Aoe\\FeatureFlag\\": "Classes/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "Tests"
        ]
    },
    "config": {
        "vendor-dir": ".Build/vendor",
        "bin-dir": ".Build/bin"
    },
    "scripts": {
        "post-autoload-dump": [
            "mkdir -p .Build/Web/typo3conf/ext/",
            "[ -L .Build/Web/typo3conf/ext/feature_flag ] || ln -snvf ../../../../. .Build/Web/typo3conf/ext/feature_flag"
        ],
        "test:unit": [
            "[ -e .Build/bin/phpunit ] || composer update",
            "TYPO3_PATH_ROOT=$(pwd)/.Build/Web .Build/bin/phpunit -c .Build/vendor/nimut/testing-framework/res/Configuration/UnitTests.xml Tests/Unit/ --debug --verbose"
        ],
        "test:functional": [
            "[ -e .Build/bin/phpunit ] || composer update",
            "TYPO3_PATH_ROOT=$(pwd)/.Build/Web .Build/bin/phpunit -c .Build/vendor/nimut/testing-framework/res/Configuration/FunctionalTests.xml Tests/Functional --debug --verbose"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "5.0.x-dev"
        },
        "typo3/cms": {
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "web-dir": ".Build/Web"
        }
    },
    "keywords": [
        "TYPO3",
        "extbase",
        "feature flag"
    ]
}
